local Players = game:GetService("Players")

-- Settings
local OUTLINE_COLOR = Color3.new(1, 1, 1) -- white
local OUTLINE_TRANSPARENCY = 0 -- fully visible
local FILL_TRANSPARENCY = 1 -- 1 = invisible body fill, only outline shows

local function applyOutline(character)
    if not character then return end
    if character:FindFirstChild("QC_Outline") then return end

    local highlight = Instance.new("Highlight")
    highlight.Name = "QC_Outline"
    highlight.FillTransparency = FILL_TRANSPARENCY
    highlight.OutlineColor = OUTLINE_COLOR
    highlight.OutlineTransparency = OUTLINE_TRANSPARENCY
    highlight.Parent = character
end

local function setupPlayer(player)
    if player.Character then
        applyOutline(player.Character)
    end
    player.CharacterAdded:Connect(applyOutline)
end

for _, plr in ipairs(Players:GetPlayers()) do
    setupPlayer(plr)
end

Players.PlayerAdded:Connect(setupPlayer)
